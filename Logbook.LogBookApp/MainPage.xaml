<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Logbook.LogBookApp.MainPage"
             Shell.NavBarIsVisible="True"
             xmlns:viewmodels="clr-namespace:Logbook.LogBookApp.ViewModel"
             x:DataType="viewmodels:MainViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing"
                                        Command="{Binding LoadDataCommand}"/>
    </ContentPage.Behaviors>

    <!-- erstes Grid (Hauptgrid) -->
    <Grid RowDefinitions="180">

         <!-- erste Zeile im Hauptgrid-->
        <!--
        <Label Text="{Binding Header}" FontSize="Subtitle"/>
        -->

        <Grid Grid.Row="0" Grid.Column="0" RowDefinitions="Auto,*" Margin="10">
            <!-- Header -->
            <Grid ColumnDefinitions="100,2*,*,*" Grid.Row="0">
                <Label Text="Datum" Padding="5"/>
                <Label Grid.Column="1" Text="{Binding Description}" Padding="5" FontAttributes="Bold"  FontSize="Caption"/>
                <Label Grid.Column="2" Text="{Binding From}" Padding="5" FontAttributes="Bold"  FontSize="Caption"/>
                <Label Grid.Column="3" Text="{Binding To}" Padding="5" FontAttributes="Bold"  FontSize="Caption"/>
            </Grid>
             
            <!-- Data -->
            <CollectionView Grid.Row="1" ItemsSource="{Binding Entries}">
                <CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Entry">
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <Label Text="Es wurde keine Fahrt hinzugefügt." Padding="10"/>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>

        <Button Grid.Row="1" Text="add Demo"></Button>
    </Grid>

</ContentPage>
